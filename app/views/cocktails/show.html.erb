
<div class="show">
<h1><%= @cocktail.name.capitalize %></h1>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.ingredient.name %> | <%= dose.description %> | <%= link_to "delete", dose_path(dose), method: :delete %></p>
<% end %>

<%= link_to "Back to cocktails", cocktails_path, class: "btn btn-primary" %>

<%= render "doses/form", cocktail: @cocktail,
dose: Dose.new %>
</div>
