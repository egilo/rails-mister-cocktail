
<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path c.photo, height: 300, width: 400, crop: :fill %>');">
        <div class="card-category"></div>
        <div class="card-description">
          <h1><%= c.name.capitalize %></h1>
          <p>Delicious, the best</p>
        </div>
        <%= link_to "", cocktail_path(c), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
